<div class="text-center">
  <h4>New post by {{username}}</h4>
  <form class="new-post-form">
    <div class="form-group" id="post-title">
      <label for="exampleFormControlTextarea1">Post Title</label>
      <textarea class="form-control" id="post-title-input" rows="1"></textarea>
    </div>
    <div class="form-group">
      <label for="exampleFormControlTextarea1">Post Content</label>
      <textarea class="form-control" id="post-content" rows="3"></textarea>
    </div>
    <div class="form-group">
      <button class="btn btn-primary" id="create-post" type="submit">Create</button>
    </div>
  </form>
  

</div>

<script src="./js/post.js"></script>